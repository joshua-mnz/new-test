pipeline {
    agent any 
    
    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhubID')  // lowercase 'c'
        IMAGE_NAME = "josh57/new-test"
    }
    
    stages {
        stage('Checkout') {  // Fixed quotes: '' not ''
            steps {
                
                git(
                    url: 'https://github.com/joshua-mnz.new-test',
                    branch: 'main'
                )
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${IMAGE_NAME}:latest")
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                        dockerImage.push()
                    }
                }
            }
        }
    }
    
    post {

        success {
            echo 'Pipeline succeeded!'
        }
        failure {
            echo 'Pipeline failed!'
        }
		always{
			echo 'Cleaning up workspaceâ€¦'
			deleteDir()
			}
    }
}
